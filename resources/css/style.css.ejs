
body {
    font-family: Arial, Helvetica, sans-serif;
    margin: 0;
    padding: 0;
    height: 100%;
    color: #333;
}

@font-face {
    font-family: 'BLOKKNeue-Regular';
    src: url('BLOKKNeue-Regular.eot');
    src: url('BLOKKNeue-Regular.eot?#iefix') format('embedded-opentype'),
         url('BLOKKNeue-Regular.woff') format('woff'),
         url('BLOKKNeue-Regular.svg#BLOKKNeue-Regular') format('svg');
    font-weight: normal;
    font-style: normal;
}

.clearfix:before,
.clearfix:after {
    content: " ";
    display: table;
}
.clearfix:after {
    clear: both;
}

svg {
    fill: #1274d6;
}

a {
    color: #1274d6;
    text-decoration: none;
}
a:hover {
    border-bottom: 1px dashed #1274d6;
}

h1 {
    margin: 0 0 10px;
    font-size: 18px;
    font-weight: bold;
}

p {
    margin: 0;
    padding: 0;
}

main,
header,
article,
aside {
    display: block;
}

main {
    max-width: 1200px;
    padding: 2%;
    margin: 0 auto;
}

header {
    width: 100%;
    background-color: #093969;
    color: #fff;
    font-family: 'BLOKKNeue-Regular';
    line-height: 1;
}

header > section {
    max-width: 1200px;
    padding: 2%;
    margin: 0 auto;
}

article {
    float: left;
    width: 100%;
    font-family: 'BLOKKNeue-Regular';
    text-align: justify;
    font-size: 20px;
    line-height: 1;
}
@media screen and (min-width: 780px) {
    article {
        width: 70%;
        margin-right: 5%;
    }
}

aside {
    float: left;
    width: 100%;
    margin-top: 2%;
}
@media screen and (min-width: 780px) {
    aside {
        width: 25%;
        margin: 0;
    }
}

.social-media__list {
    margin: 0;
    padding: 0;
    font-size: 16px;
    line-height: 1.75;
    list-style-type: none
}
.social-media__list li{
    margin-bottom: 10px;
    line-height: 1;
}
.social-media__link{
    padding: 10px 0;
}
.social-media__icon{
    pointer-events:none;
    display: inline-block;
    vertical-align: middle;
    margin-right: 8px;
}
.social-media__link img{
    width: 33px;
    height: 33px;
    margin-left: -4px;
}
.tooltip-wrap{
    position: relative;
}
.tooltip-container{
    position: absolute;
    opacity: 0;
    visibility: hidden;
    min-width: 260px;
    max-width: 100%;
    bottom: 100%;
    left: 50%;
    z-index: -1;
    padding: 5px 10px;
    text-align: center;
    color: #fff;
    background-color: #007EA7;
    border-radius: .25em;
    -webkit-transform: translateX(-50%) translateY(0);
    transform: translateX(-50%) translateY(0);
    transition: visibility .15s ease-out,opacity .15s ease-out,-webkit-transform .15s ease-out;
    transition: visibility .15s ease-out,opacity .15s ease-out,transform .15s ease-out;
    transition: visibility .15s ease-out,opacity .15s ease-out,transform .15s ease-out,-webkit-transform .15s ease-out;
}
.tooltip-container:after {
    content: '';
    position: absolute;
    width: 0;
    height: 0;
    bottom: -16px;
    left: 50%;
    margin-left: -8px;
    border: solid transparent;
    border-color: transparent;
    border-top-color: #007EA7;
    border-width: 8px;
    pointer-events: none;
}
[data-showing="true"] {
    opacity: 1;
    visibility: visible;
    z-index: 10;
    -webkit-transform:translateX(-50%) translateY(-12px);
    transform:translateX(-50%) translateY(-12px)
}